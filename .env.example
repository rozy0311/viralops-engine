# ViralOps Engine - Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env to version control!

# === LLM Provider Cascade (v3.0) ===
# Order: gemini > github_models > openai (first working provider wins)
LLM_PROVIDER_ORDER=gemini,github_models,openai
DISABLE_OPENAI=true

# Gemini (PRIMARY - free tier, fast)
# Get key: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_VISION_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=imagen-4.0-fast-generate-001

# GitHub Models (FALLBACK - free via GitHub Copilot)
# Get key: GitHub Settings > Developer settings > Personal access tokens
GH_MODELS_API_KEY=your-github-pat-token
GH_MODELS_API_BASE=https://models.github.ai/inference
GH_MODELS_MODEL=openai/gpt-4o-mini

# OpenAI (LAST RESORT - disabled by default)
OPENAI_API_KEY=sk-your-key-here

# === Telegram Alerts ===
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# === Budget ===
VIRALOPS_MONTHLY_BUDGET_USD=100

# === Shopify Blog (Admin REST API) ===
SHOPIFY_SHOP=your-store
SHOPIFY_ACCESS_TOKEN=shpat_your-token
SHOPIFY_BLOG_ID=your-blog-id

# === Publer (Social Media Scheduler) ===
PUBLER_API_KEY=your-publer-api-key
PUBLER_WORKSPACE_ID=your-workspace-id

# === Auto-Share Config (v3.3) ===
SHOPIFY_WATCH_BLOGS=sustainable-living
SHOPIFY_CUSTOM_DOMAIN=yourdomain.com
SHOPIFY_AUTOSHARE_TIKTOK_VIA=publer
SHOPIFY_AUTOSHARE_PINTEREST_VIA=publer
SHOPIFY_AUTOSHARE_PINTEREST_ENABLED=true
SHOPIFY_AUTOSHARE_INTERVAL_MIN=30
SHOPIFY_AUTOSHARE_MAX_PER_CYCLE=5

